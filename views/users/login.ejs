<% layout("/layouts/boilerplet") %>

<div class="row mt-3">
  <h2 class="col-6 offset-3">Log-in to wanderlust Web</h2>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="mt-3 needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username : </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Must be Required!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">password : </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Must be Required!</div>
      </div>
      <button class="btn btn-outline-secondary">Log-in</button>
    </form>
  </div>
</div>

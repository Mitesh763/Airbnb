      <!-- ///////////////////////////////////////////////end new slider -->

      <% for( let listing of allListing) { %>
      <div class="card listing-card" style="width: 22rem">
        <a href="/listing/<%= listing._id %>">
          <div class="imgs-list">
            <img
              class="card-img-top"
              src="<%= listing.image.url %>"
              alt="Card image cap"
              style="height: 20rem"
            />
          </div>
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b> <%= listing.title %> <br /> </b>
              â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night
              <span class="textInfo"> + 18% GST </span>
            </p>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>

  <script>
    // form-check-input
    const toggle = document.querySelector(".form-check-input");
    toggle.addEventListener("click", () => {
      let textInfo = document.getElementsByClassName("textInfo");
      for (info of textInfo) {
        if (info.style.display !== "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
    function showListing(cag) {
      window.location.href = "?cat=" + cag;
    }
  </script>

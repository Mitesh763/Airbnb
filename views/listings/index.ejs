<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    align-items: center;
    width: 5.5rem;
  }

  .card-text-below {
    display: flex;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .text-toggle {
    border: 0.12rem solid gray;
    border-radius: 1rem;
    padding: 0.7rem;
    display: flex;
    align-items: center;
  }

  .textInfo {
    display: none;
  }
</style>


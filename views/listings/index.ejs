<% layout("/layouts/boilerplet") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 1rem;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    align-items: center;
    width: 5.5rem;
  }

  .card-text-below {
    display: flex;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
  }

  .text-toggle {
    border: 0.12rem solid gray;
    border-radius: 1rem;
    padding: 0.7rem;
    display: flex;
    align-items: center;
    /* width: 12rem; */
    /* height: rem; */
    /* margin-top: 0.6rem; */
  }

  .textInfo {
    display: none;
  }
</style>

<body>
  <div class="container">
    <div class="row">
      <!-- <h3 class="mt-4">All Listings</h3> -->
      <div id="filters">
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>BeatchFront</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-image"></i></div>
          <p>Amezing Views</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-landmark-dome"></i></div>
          <p>Domes</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Camping</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-igloo"></i></div>
          <p>Arctic</p>
        </div>
        <div class="filter mt-3 mb-4">
          <div><i class="fa-solid fa-bowling-ball"></i></div>
          <p>Play</p>
        </div>
        <div class="text-toggle">
          <div class="form-check-reverse form-switch">
            <input
              class="form-check-input"
              type="checkbox"
              role="switch"
              id="flexSwitchCheckDefault"
            />
            <label class="form-check-label" for="flexSwitchCheckDefault"
              >Display with Texes</label
            >
          </div>
        </div>
      </div>
      <% for( let listing of allListing) { %>
      <div class="card listing-card" style="width: 22rem">
        <a href="/listing/<%= listing._id %>">
          <img
            class="card-img-top"
            src="<%= listing.image.url %>"
            alt="Card image cap"
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b> <%= listing.title %> <br /> </b>
              â‚¹ <%= listing.price.toLocaleString("en-IN") %> /night
              <span class="textInfo"> + 18% GST </span>
            </p>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>

  <script>
    // form-check-input
    const toggle = document.querySelector(".form-check-input");
    toggle.addEventListener("click", () => {
      let textInfo = document.getElementsByClassName("textInfo");
      for (info of textInfo) {
        if (info.style.display !== "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  </script>
</body>
